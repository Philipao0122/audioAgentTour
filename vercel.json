{
  "version": 2,
  "builds": [
    {
      "src": "simple_audio_tour.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/simple_audio_tour.py" }
  ],
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9"
    }
  },
  "env": {
    "STREAMLIT_SERVER_HEADLESS": "true",
    "STREAMLIT_SERVER_PORT": "8080",
    "STREAMLIT_SERVER_RUN_ON_SAVE": "false"
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/simple_audio_tour.py" }
  ]
}
